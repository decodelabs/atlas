{
    "name": "decodelabs/atlas",
    "description": "Easy filesystem and io functions",
    "type": "library",
    "keywords": ["filesystem", "io", "file", "directory"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^7.2",

        "decodelabs/exceptional": "^0.2",
        "decodelabs/glitch": "^0.15.6",
        "decodelabs/veneer": "^0.5",
        "decodelabs/systemic": "^0.6",

        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/extension-installer": "^1.0",
        "decodelabs/phpstan-decodelabs": "^0.3.1",

        "guzzlehttp/guzzle": "^6.4",
        "decodelabs/collections": "^0.5"
    },
    "suggest": {
        "ext-event": "Faster and more reliable event loops",
        "guzzlehttp/guzzle": "Communication over HTTP",
        "decodelabs/collections": "Fetch JSON files over HTTP"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Atlas\\": "src/Atlas"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.7.x-dev"
        }
    }
}
